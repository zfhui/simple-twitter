<%= form_tag('/twitter_search', method: 'get', class: 'pure-form') do %>
  <fieldset>
    <legend>Standard Twitter Search</legend>

    <div class="pure-g">
      <div class="pure-u-1-1 pure-u-md-3-4">
        <%= text_field_tag(:q, @q, placeholder: 'Search Term...') %>
      </div>
      <div class="pure-u-1-1 pure-u-md-1-4">
        <%= submit_tag('Search', class: 'pure-button pure-button-primary stretch') %>
      </div>
    </div>
  </fieldset>
<% end %>
<p>
<% if @tweets.present? %>
  <table class="pure-table pure-table-horizontal stretch">
    <thead>
      <tr>
        <th><%= "Search Result for: #{@q}" %></th>
    </tr>
    </thead>
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.text %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
